<%- include("../partials/header.ejs") %>

<main class="main">
    <section class="section">
        <div class="post-meta">
            <p class="post-meta__date"><%= postdate %></p>
            <p class="post-meta__location"><%= `${bakery}, ${city}` %></p>
        </div>
        
        <h1><%= posttitle %></h1>
    </section>

    <section class="section">
        <% if (locals.postcontent) { %>
            <%- postcontent %>
        <% } %>
    </section>
</main>

<% if (locals.loggedIn) { %>
    <%- include("../partials/admin-bar.ejs") %>
<% } %>

<%- include("../partials/footer.ejs") %>