<%- include("partials/header.ejs") %>

<main class="content">
    <div class="content__inner">
        <form class="form form--super-narrow" action="log-in" method="POST">
            <h1>Log ind</h1>

            <div class="form__field-group">
                <label class="form__label" for="username">Brugernavn *</label>
                <input class="form__input" type="text" name="username" required>
            </div>

            <div class="form__field-group">
                <label class="form__label" for="password">Adgangskode *</label>
                <input class="form__input" type="password" name="password" required>
            </div>

            <button class="form__submit" type="submit">Log ind</button>
        </form>
    </div>
</main>

