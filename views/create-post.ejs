<%- include("partials/header.ejs") %>

<form class="form" action="/create-post" method="POST">
    <legend class="form__legend">Nyt indlæg</legend>

    <div class="form__field-group">
        <label class="form__label" for="posttitle">Titel</label>
        <input class="form__input" type="text" name="posttitle">
    </div>

    <fieldset>
        <div class="form__field-group">
            <label class="form__label" for="postbaker">Bageri/Konditori</label>
            <input class="form__input" type="text" name="postbaker">
        </div>

        <div class="form__field-group">
            <label class="form__label" for="postcity">By</label>
            <input class="form__input" type="text" name="postcity">
        </div>
    </fieldset>

    <div class="form__field-group">
        <label class="form__label" for="postcontent"></label>
        <textarea name="postcontent" id="postcontent"></textarea>
    </div>

    <button class="form__submit" type="submit">Opret indlæg</button>
</form>

<%- include("partials/footer.ejs") %>